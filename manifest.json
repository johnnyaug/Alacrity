{
  "name": "Alacrity",
  "version": "2",
  "permissions": ["background", "tabs", "notifications", "storage", "cookies", "http://*/*", "https://*/*"],
  "browser_action": {
	"default_icon": "resources/logo.png",
	"default_title": "Alacrity",
	"default_popup": "html/popup.html"
	},
  "background": {
  	"scripts": ["lib/jquery.js", "js/back.js"]
  },
  "icons": {
    "48": "resources/logo.png"
  },
  "content_scripts": [{
  	"matches": ["http://*/*", "https://*/*"],
  	"css": ["lib/colorbox.css"],
    "js": ["lib/jquery.js", "lib/jquery.colorbox.js", "js/fancy-box-shower.js"]
  }],
  "manifest_version": 2,
  "web_accessible_resources": ["html/error.html", "html/warning2.html", "html/break-started.html", "css/warning.css", "lib/images/controls.png"]
}
